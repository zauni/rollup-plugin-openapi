{
  "name": "rollup-plugin-openapi",
  "version": "2.0.0",
  "description": "A Rollup and Vite plugin which converts OpenAPI YAML files to ES6 modules.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./yaml": {
      "types": "./types/yaml.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "bun test",
    "lint": "biome check ./src && tsc --noEmit",
    "format": "biome format ./src --write",
    "fix": "biome check ./src --write"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "format": ["cjs", "esm"],
    "cjsInterop": true
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@rollup/pluginutils": "^5.1.0",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/bun": "latest",
    "rollup": "^4.18.0",
    "tslib": "^2.6.3",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.13"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zauni/rollup-plugin-openapi.git"
  },
  "author": "Matthias Zaunseder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zauni/rollup-plugin-openapi/issues"
  },
  "homepage": "https://github.com/zauni/rollup-plugin-openapi#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "rollup",
    "vite",
    "plugin",
    "rollup-plugin",
    "vite-plugin",
    "openapi",
    "swagger",
    "yaml"
  ]
}
